---
import MainLayout from '../layouts/main.astro';

const pageTitle = "Salut ! ";

const hero = {
	greetings: "Oui, salut ! Ici tu trouveras...",
	introduction: "Développement Web, Photographie & Design" ,
	description: "... et parfois tout ça en même temps !"
};
---
<MainLayout title={ pageTitle }>
	<section class="hero -pageCover">
		<p class="hero__greeting">
			{ hero.greetings }
		</p>

		<p class="hero__introduction">
			{ hero.introduction }
		</p>

		<p class="hero__description">
			{ hero.description }
		</p>
	</section>
</MainLayout>

